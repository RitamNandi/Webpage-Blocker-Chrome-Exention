{
  "name": "Webpage Blocker",
  "description": "Go through an extra filter when accessing website of your choosing, and see a reason why",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "vadericon.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background" : {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "block.html",
        "block.css",
        "block.js"
      ],
      "matches": [ "<all_urls>" ]
    }
  ]
}